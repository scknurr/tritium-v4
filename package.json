{
  "name": "skill-customer-management",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-directives --max-warnings 0",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "supabase:start": "docker-compose up -d",
    "supabase:stop": "docker-compose down",
    "supabase:reset": "docker-compose down -v && docker-compose up -d",
    "dev:local": "cp .env.local .env && npm run dev",
    "load:context": "node ./docs/load-context.js",
    "ai:context": "node ./.ai-context/autoload.js",
    "ai:insight": "node ./.ai-context/capture-insight.js",
    "ai:get-insight": "node ./.ai-context/get-insight.js",
    "ai:task": "node -e \"console.log('\\n🔍 Current Tasks:\\n'); require('fs').readFileSync('./.ai-context/06_CURRENT_TASKS.md', 'utf8').split('\\n').slice(0, 20).forEach(line => console.log(line))\"",
    "ai:help": "node ./.ai-context/ai-help.js",
    "predev": "node -e \"console.log('\\n🤖 AI ASSISTANT REMINDER: Load context with npm run ai:context\\n')\""
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-avatar": "^1.1.3",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.24.1",
    "@tanstack/react-query-devtools": "^5.24.1",
    "@tanstack/react-table": "^8.12.0",
    "chalk": "^5.4.1",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "flowbite": "^2.5.2",
    "flowbite-react": "^0.7.8",
    "immer": "^10.0.3",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.50.1",
    "react-router-dom": "^6.22.2",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "supabase": "^2.19.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.3.1"
  }
}
